<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#666666"
	    android:text="2012.12.25"
	    android:layout_marginLeft="@dimen/integral_common_leftMargin"
	    android:layout_marginRight="10dp"/>
	<ImageView 
	    android:id="@+id/list_item_integral_circular"
	    android:layout_marginTop="2dp"
	    android:layout_width="@dimen/integral_item_circular_width"
	    android:layout_height="@dimen/integral_item_circular_width"
	    android:src="@drawable/circular_juhuang"
	    android:layout_marginLeft="@dimen/integral_item_circular_leftMargin"/>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/list_item_integral_circular"
	    android:layout_marginTop="@dimen/integral_item_topMargin"
	    android:layout_marginLeft="10dp"
	    android:layout_alignTop="@+id/list_item_integral_circular"
	    android:layout_marginRight="@dimen/integral_common_leftMargin"
	    android:background="@drawable/ic_item_integral_bg" >
	    <TextView 
	        android:layout_marginLeft="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="签到"/>
	    <TextView 
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/ic_add"
	        android:drawablePadding="5dp"
	        android:text="500"
	        android:layout_marginRight="20dp"/>
	</RelativeLayout>

</RelativeLayout>
