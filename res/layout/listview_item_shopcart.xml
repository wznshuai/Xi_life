<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_bg"
    android:orientation="horizontal"
    android:padding="8dp" >

    <LinearLayout
        android:id="@+id/tempId1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingRight="10dp" >

            <CheckBox
                android:id="@+id/list_item_shopcart_checkbox"
                style="@style/Common_CheckBox.Pink.Big"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="false"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="false" />
        </FrameLayout>

        <ImageView
            android:id="@+id/list_item_shopcart_img"
            android:layout_width="@dimen/commodity_item_img"
            android:layout_height="@dimen/commodity_item_img"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_ic_fantuan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_item_shopcart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/list_item_shopcart_taste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/yellow_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/list_item_shopcart_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="#976600" />

            <TextView
                android:id="@+id/list_item_shopcart_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0099" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tempId1"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_item_shopcart_ic_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_jian_grey" />

        <EditText
            android:id="@+id/list_item_shopcart_edittext"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/list_item_shopcart_ic_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_jia_grey" />
    </LinearLayout>

</RelativeLayout>