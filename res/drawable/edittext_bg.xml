<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/white" />

            <stroke android:width="1px"  android:color="@color/purple"></stroke>

            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp"></padding>
        </shape>
     </item>
    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/white" />

            <stroke android:width="1px" android:color="@color/face_border"></stroke>

            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp"></padding>
        </shape>
      
   </item>

</selector>